  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
        a.navbar-brand(href='/')
            img(src='/images/mr.png' alt='RW-MR' style='max-height:40px').img-fluid
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation")                    
            span.navbar-toggler-icon
        .collapse.navbar-collapse(id='navbarsExampleDefault')
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href='/') Home
                li.nav-item
                    a.nav-link(href='/compare') Compare
                li.nav-item
                    a.nav-link(href='/item?id=random') Random
                li.nav-item
                    a.nav-link(href='/compare?id1=random&id2=random') Random Matchup
                li.nav-item.dropdown
                    a.nav-link.dropdown-toggle(href='#' id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Charts
                    .dropdown-menu(aria-labelledby="dropdown01")
                        a.dropdown-item(href='/chart?cat=subscriptions') Subscriptions
                        a.dropdown-item(href='/chart?cat=favorites') Favorites
                        a.dropdown-item(href='/chart?cat=comments') Comments
                        a.dropdown-item(href='/chart?cat=views') Views
                        a.dropdown-item(href='/chart?cat=unsubscribes') Unsubscriptions
            form.form-inline.my-2.my-lg-0(action="/item")
                input.form-control.mr-sm-2(type="text" placeholder="Search with Steam ID" name="id" aria-label="Search")
                button.btn.btn-info.btn-outline-white.my-2.my-sm-0(type="submit") Search
    .container.mt-5
        .pt-5
        block content
