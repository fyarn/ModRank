extends layout

block content
    .row
        .col-sm-6.margin-auto
            h1.cover-heading Rimworld ModRank
            form(method='GET' action='/item')
                div.form-group
                    label(for='id') Steam Workshop ID: 
                    input#id.form-control(type='text', name='id' required)
                .row
                    .col-sm-1
                    .col-sm-8.nopadding
                        button.btn.btn-primary.rounded-0.rounded-left(type='submit', style='width:100%') Search
                    .col-sm-2.nopadding
                        a(href='/item?id=random', style="width:100%").btn.btn-danger.rounded-0.rounded-right Random
            em= 'Search ' + llen + ' total published mods and scenarios!'
    .row
        .col-sm-12.margin-auto(style='margin-top:50px')
            h2 Hall of Famers
            hr.bg-white
        .clearfix
        .col-md-6.col-lg-4(style='margin-bottom:30px')
            ul.list-group
                li.list-group-item.bg-danger(style='border-bottom:4px solid white')
                    h4 Most Subscribed
                li.list-group-item.bg-warning
                    .row
                        .col-md-2 #1
                        .col-md-2
                            img(src=subTop.img alt=subTop.itemTitle).img-fluid
                        .col-md-6= subTop.itemTitle
                        .col-md-2= subTop.subs
                li.list-group-item.bg-secondary
