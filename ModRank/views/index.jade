extends layout

block content
    .row
        .col-sm-6.margin-auto
            h1.cover-heading Rimworld ModRank
            form(method='GET' action='/item')
                div.form-group
                    label(for='id') Steam Workshop ID: 
                    input#id.form-control(type='text', name='id' required)
                .row
                    .col-sm-1
                    .col-sm-8.nopadding
                        button.btn.btn-primary.rounded-0.rounded-left(type='submit', style='width:100%') Search
                    .col-sm-2.nopadding
                        a(href='/item?id=random', style="width:100%").btn.btn-danger.rounded-0.rounded-right Random
            em= 'Search ' + llen + ' total published mods and scenarios!'
    .row
        h2 Hall of Famers
        .col-md-6
            ul.list-group.bg-secondary
                li.list-group-item
                    h4 Most Subscribed
                li.list-group-item
                    .row
                        .col-md-2
                            img(src=subTop.img alt=subTop.itemTitle).img-fluid
                        .col-md-4= subTop.itemTitle
                        .col-md-6= subTop.subs
                li.list-group-item
                    .row
                        .col-md-2
