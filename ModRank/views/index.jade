extends layout

block content
    .row
        .col-sm-6.margin-auto
            h1.cover-heading Rimworld ModRank
            form(method='GET' action='/item')
                div.form-group
                    label(for='id') Steam Workshop ID: 
                    input#id.form-control(type='text', name='id' required)
                .row
                    .col-sm-1
                    .col-sm-8.nopadding
                        button.btn.btn-primary.rounded-0.rounded-left(type='submit', style='width:100%') Search
                    .col-sm-2.nopadding
                        a(href='/item?id=random', style="width:100%").btn.btn-danger.rounded-0.rounded-right Random
            em= 'Search ' + llen + ' total published mods and scenarios!'
    ul.list-group
        li.list-group-item
            h2 Hall of Famers
        li.list-group-item.bg-secondary
            .row
                .col-md-4 Most Subscribed
                .col-md-2
                    img(src=subTop.img alt=subTop.itemTitle)
                .col-md-4= subTop.itemTitle
                .col-md-2= subTop.subs
        li.list-group-item.bg-primary
            .row
                .col-md-4 Most Favorited
                .col-md-2
                    img(src=subTop.img alt=subTop.itemTitle)
                .col-md-4= subTop.itemTitle
                .col-md-2= subTop.favs
        li.list-group-item.bg-success
            .row
                .col-md-4 Most Comments
                .col-md-2
                    img(src=subTop.img alt=subTop.itemTitle)
                .col-md-4= subTop.itemTitle
                .col-md-2= subTop.comments
        li.list-group-item.bg-danger
            .row
                .col-md-4 Most Viewed
                .col-md-2
                    img(src=subTop.img alt=subTop.itemTitle)
                .col-md-4= subTop.itemTitle
                .col-md-2= subTop.views
        li.list-group-item.bg-warning
            .row
                .col-md-4 Most Unsubscribed
                .col-md-2
                    img(src=subTop.img alt=subTop.itemTitle)
                .col-md-4= subTop.itemTitle
                .col-md-2= subTop.unsubscribes